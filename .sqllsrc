# Archivo de configuración para sqls (SQL Language Server)
# Configura aquí tus conexiones de base de datos

# Ejemplo para MySQL
# connections:
#   - driver: mysql
#     dataSourceName: "user:password@tcp(localhost:3306)/database_name"
#     alias: "mysql_local"

# Ejemplo para PostgreSQL
# connections:
#   - driver: postgresql
#     dataSourceName: "host=localhost port=5432 user=postgres password=password dbname=postgres sslmode=disable"
#     alias: "postgres_local"

# Ejemplo para SQLite
# connections:
#   - driver: sqlite3
#     dataSourceName: "/path/to/database.db"
#     alias: "sqlite_local"

# Ejemplo para SQL Server
# connections:
#   - driver: sqlserver
#     dataSourceName: "sqlserver://user:password@localhost:1433?database=dbname"
#     alias: "sqlserver_local"

# Para usar estas conexiones:
# 1. Descomenta y edita las líneas de arriba con tus credenciales reales
# 2. Guarda el archivo
# 3. Reinicia Neovim
# 4. Abre un archivo .sql y usa los comandos LSP

# Comandos disponibles en archivos SQL:
# <leader>se - Ejecutar query bajo el cursor
# <leader>sv - Ejecutar query en ventana vertical
# <leader>sw - Mostrar bases de datos
# <leader>sc - Mostrar conexiones
# <leader>ss - Mostrar esquemas
# <leader>st - Mostrar tablas

# Para la UI de base de datos (vim-dadbod):
# <leader>db - Toggle DBUI
# <leader>df - Find DB buffer
# <leader>dr - Rename DB buffer
# <leader>dl - Last query info